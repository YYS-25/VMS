<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pkg.vms.controller.AddBranchController"
      spacing="12"
      style="-fx-padding:20; -fx-background-color:#f3e9d7;">

    <Label text="Add New Branch"
           style="-fx-font-size:18px; -fx-font-weight:bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Branch Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Company:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="companyCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Phone:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Manager:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="managerField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Save"
            onAction="#handleSave"
            style="-fx-background-color:#7c0d0d; -fx-text-fill:white; -fx-padding:8 16;"/>

</VBox>

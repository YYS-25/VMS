<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="pkg.vms.controller.CompanyFormController"
      style="-fx-padding:20; -fx-background-color:white;">

    <Label fx:id="formTitle" text="Add Company"
           style="-fx-font-size:18px; -fx-text-fill:#7c0d0d;"/>

    <TextField fx:id="nameField" promptText="Company Name"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="industryField" promptText="Industry"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#close"/>
        <Button text="Save" style="-fx-background-color:#7c0d0d; -fx-text-fill:white;"
                onAction="#saveCompany"/>
    </HBox>

</VBox>

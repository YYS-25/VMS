<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pkg.vms.controller.EditCompanyController"
      spacing="12"
      style="-fx-padding:20; -fx-background-color:#f3e9d7;">

    <Label text="Edit Company"
           style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <VBox spacing="10">

        <HBox spacing="10">
            <Label text="Name:"/>
            <TextField fx:id="nameField" prefWidth="220"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Email:"/>
            <TextField fx:id="emailField" prefWidth="220"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Industry:"/>
            <TextField fx:id="industryField" prefWidth="220"/>
        </HBox>

    </VBox>

    <Button text="Save Changes"
            onAction="#handleSave"
            style="-fx-background-color:#7c0d0d; -fx-text-fill:white; -fx-padding:8 16;"/>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="pkg.vms.controller.ClientsController">

    <!-- HEADER -->
    <top>
        <HBox spacing="15" style="-fx-background-color:#1e1e1e;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Clients Management"
                   style="-fx-text-fill:white; -fx-font-size:20px; -fx-font-weight:bold;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <TextField fx:id="searchHeaderField"
                       promptText="Search client..."
                       prefWidth="250"/>

            <Button text="Search" onAction="#handleSearch"/>
            <Button fx:id="addClientButton" text="Add Client" onAction="#handleAddClient"/>
        </HBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- 2. TableView -->
            <TableView fx:id="clientsTable" prefHeight="250">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="colPhone" text="Phone" prefWidth="120"/>
                    <TableColumn fx:id="colAddress" text="Address" prefWidth="200"/>
                </columns>
            </TableView>

            <!-- Action buttons under table -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="0" right="0" bottom="0" left="5"/>
                </padding>

                <Button text="View Details" onAction="#handleViewDetails"/>
                <Button text="Edit" onAction="#handleEdit"/>
                <Button text="Delete" onAction="#handleDelete"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Export Excel"/>
            </HBox>

            <Separator/>

            <!-- 3. Client Details Panel (Split into left and right columns) -->
            <VBox fx:id="detailsPane"
                  spacing="15"
                  visible="false"
                  managed="false"
                  style="-fx-background-color:#780000; -fx-background-radius:10;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <HBox spacing="10" alignment="BASELINE_CENTER" prefWidth="Infinity">
                    <Label fx:id="detailsTitle"
                           style="-fx-text-fill:white; -fx-font-size:18px; -fx-font-weight:bold;"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Button fx:id="closeFormButton" text="✕"
                            style="-fx-background-color:transparent; -fx-text-fill:white; -fx-font-size:16px; -fx-font-weight:bold; -fx-cursor:hand;"
                            onAction="#handleDetCancel"/>
                </HBox>

                <!-- Info Grid Split into Left and Right Columns -->
                <HBox spacing="15" alignment="TOP_LEFT" prefWidth="Infinity">
                    <!-- Left VBox for half of the details -->
                    <VBox spacing="12">
                        <HBox spacing="10">
                            <Label text="Client ID:" style="-fx-text-fill:white; -fx-font-weight:bold; -fx-alignment:CENTER_LEFT;"/>
                            <Label fx:id="detId" style="-fx-text-fill:white; -fx-alignment:CENTER_LEFT;"/>
                        </HBox>

                        <HBox spacing="10">
                            <Label text="Client Name:" style="-fx-text-fill:white; -fx-font-weight:bold; -fx-alignment:CENTER_LEFT;"/>
                            <Label fx:id="detName" style="-fx-text-fill:white; -fx-alignment:CENTER_LEFT;"/>
                        </HBox>

                        <HBox spacing="10">
                            <Label text="Email:" style="-fx-text-fill:white; -fx-font-weight:bold; -fx-alignment:CENTER_LEFT;"/>
                            <Label fx:id="detEmail" style="-fx-text-fill:white; -fx-alignment:CENTER_LEFT;"/>
                        </HBox>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/> <!-- This Region will take up remaining space between the left and right columns -->

                    <!-- Right VBox for the rest of the details -->
                    <VBox spacing="12">
                        <HBox spacing="10">
                            <Label text="Address:" style="-fx-text-fill:white; -fx-font-weight:bold; -fx-alignment:CENTER_LEFT;"/>
                            <Label fx:id="detAddress" style="-fx-text-fill:white; -fx-alignment:CENTER_LEFT;"/>
                        </HBox>

                        <HBox spacing="10">
                            <Label text="Phone:" style="-fx-text-fill:white; -fx-font-weight:bold; -fx-alignment:CENTER_LEFT;"/>
                            <Label fx:id="detPhone" style="-fx-text-fill:white; -fx-alignment:CENTER_LEFT;"/>
                        </HBox>

                        <HBox spacing="10">
                            <Label text="Total Requests:" style="-fx-text-fill:white; -fx-font-weight:bold; -fx-alignment:CENTER_LEFT;"/>
                            <Label fx:id="detRequests" style="-fx-text-fill:white; -fx-alignment:CENTER_LEFT;"/>
                        </HBox>

                        <HBox spacing="10">
                            <Label text="Active Vouchers:" style="-fx-text-fill:white; -fx-font-weight:bold; -fx-alignment:CENTER_LEFT;"/>
                            <Label fx:id="detVouchers" style="-fx-text-fill:white; -fx-alignment:CENTER_LEFT;"/>
                        </HBox>
                    </VBox>
                </HBox>


                <!-- Bottom action bar -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="10" right="0" bottom="0" left="0"/>
                    </padding>

                    <Button text="View Requests"/>
                    <Button text="View Vouchers"/>
                    <Button text="Update Info"/>
                </HBox>

            </VBox>

            <!-- ADD / EDIT CLIENT FORM (initially hidden) -->
            <VBox fx:id="addForm"
                  spacing="12"
                  visible="false"
                  managed="false"
                  style="-fx-background-color:#2d2d2d; -fx-padding:20; -fx-background-radius:10;">

                <HBox spacing="10" alignment="BASELINE_CENTER">
                    <Label fx:id="formTitle"
                           text="Add New Client"
                           style="-fx-text-fill:white; -fx-font-size:18px; -fx-font-weight:bold; "/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Button fx:id="closeEditFormButton" text="✕"
                            style="-fx-background-color:transparent; -fx-text-fill:white; -fx-font-size:16px; -fx-font-weight:bold; -fx-cursor:hand;"
                            onAction="#handleCancel">
                    </Button>
                </HBox>

                <TextField fx:id="addName" promptText="Client Name"/>
                <TextField fx:id="addEmail" promptText="Email"/>
                <TextField fx:id="addAddress" promptText="Address"/>
                <TextField fx:id="addPhone" promptText="Phone"/>

                <Label fx:id="addError" style="-fx-text-fill: red;"/>

                <HBox spacing="10">
                    <Button fx:id="formSaveButton" text="Save" onAction="#handleFormSave"/>
                    <Button text="Cancel" onAction="#handleAddCancel"/>
                </HBox>

            </VBox>

        </VBox>
    </center>

</BorderPane>

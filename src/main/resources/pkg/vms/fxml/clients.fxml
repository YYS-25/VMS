<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="pkg.vms.controller.ClientsController">

    <!-- HEADER -->
    <top>
        <HBox spacing="15" style="-fx-background-color:#1e1e1e; -fx-padding:15;">
            <Label text="Clients Management" style="-fx-text-fill:white; -fx-font-size:20px; -fx-font-weight:bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchField" promptText="Search client..." prefWidth="250"/>
            <Button text="Search" onAction="#handleSearch"/>
        </HBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="15">
            <TableView fx:id="clientsTable" prefHeight="500">
                <columns>
                    <TableColumn text="ID" fx:id="colId" prefWidth="70"/>
                    <TableColumn text="Name" fx:id="colName" prefWidth="150"/>
                    <TableColumn text="Email" fx:id="colEmail" prefWidth="200"/>
                    <TableColumn text="Address" fx:id="colAddress" prefWidth="200"/>
                    <TableColumn text="Phone" fx:id="colPhone" prefWidth="120"/>
                </columns>
            </TableView>

            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button text="Add" onAction="#handleAdd"/>
                <Button text="Edit" onAction="#handleEdit"/>
                <Button text="Delete" onAction="#handleDelete" style="-fx-background-color:#d9534f; -fx-text-fill:white;"/>
            </HBox>

            <!--Add Client Form-->
            <VBox fx:id="addForm" spacing="10"
                  visible="false" managed="false"
                  style="-fx-background-color: #2d2d2d; -fx-background-radius: 10;">

                <Label fx:id="formTitle"
                       text="Add New Client"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>


                <TextField fx:id="addName" promptText="Name"/>
                <TextField fx:id="addEmail" promptText="Email"/>
                <TextField fx:id="addAddress" promptText="Address"/>
                <TextField fx:id="addPhone" promptText="Phone"/>

                <Label fx:id="addError" textFill="red"/>

                <HBox spacing="10">
                    <Button text="Cancel" onAction="#handleAddCancel"/>
                    <Button fx:id="formSaveButton"
                            text="Save"
                            onAction="#handleFormSave"
                            style="-fx-background-color:#4CAF50; -fx-text-fill:white;"/>

                </HBox>
            </VBox>

        </VBox>
    </center>

</BorderPane>

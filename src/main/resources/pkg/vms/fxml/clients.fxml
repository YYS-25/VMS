<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="pkg.vms.controller.ClientsController">

    <!-- HEADER -->
    <top>
        <HBox spacing="15" style="-fx-background-color:#1e1e1e; -fx-padding:15;">
            <Label text="Clients Management" style="-fx-text-fill:white; -fx-font-size:20px; -fx-font-weight:bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchHeaderField" promptText="Search client..." prefWidth="250"/>
            <Button text="Search" onAction="#handleSearch"/>
        </HBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="20">

            <!-- 1. Top Search Bar -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="ðŸ” Search Clients:"/>
                <TextField fx:id="searchField" prefWidth="250"/>
                <Button text="Search" onAction="#handleSearch"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="+ Add New" onAction="#handleAdd"/>
            </HBox>
            <Separator/>

            <!-- 2. TableView -->
            <TableView fx:id="clientsTable" prefHeight="250">

                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="colPhone" text="Phone" prefWidth="120"/>
                    <TableColumn fx:id="colAddress" text="Address" prefWidth="200"/>
                </columns>

            </TableView>


            <!-- Action buttons under table -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="View Details" onAction="#handleViewDetails"/>
                <Button text="Edit" onAction="#handleEdit"/>
                <Button text="Delete" onAction="#handleDelete"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Export Excel"/>
            </HBox>
            <Separator/>

            <!-- 3. Client Details Panel -->
            <VBox fx:id="detailsPane" spacing="10"
                  visible="false" managed="false"
                  style="-fx-background-color:#780000; -fx-background-radius:10;">

                <Label fx:id="detailsTitle"
                       style="-fx-text-fill:white; -fx-font-size:18px; -fx-font-weight:bold;"/>

                <!-- Info grid -->
                <GridPane hgap="20" vgap="10">
                    <Label text="Client ID:" style="-fx-text-fill:white;"/>
                    <Label fx:id="detId" style="-fx-text-fill:white;"/>

                    <Label text="Client Name:" GridPane.rowIndex="1" style="-fx-text-fill:white;"/>
                    <Label fx:id="detName" GridPane.rowIndex="1" style="-fx-text-fill:white;"/>

                    <Label text="Email:" GridPane.rowIndex="2" style="-fx-text-fill:white;"/>
                    <Label fx:id="detEmail" GridPane.rowIndex="2" style="-fx-text-fill:white;"/>

                    <Label text="Address:" GridPane.rowIndex="3" style="-fx-text-fill:white;"/>
                    <Label fx:id="detAddress" GridPane.rowIndex="3" style="-fx-text-fill:white;"/>

                    <Label text="Phone:" GridPane.rowIndex="4" style="-fx-text-fill:white;"/>
                    <Label fx:id="detPhone" GridPane.rowIndex="4" style="-fx-text-fill:white;"/>

                    <Label text="Total Requests:" GridPane.rowIndex="5" style="-fx-text-fill:white;"/>
                    <Label fx:id="detRequests" GridPane.rowIndex="5" style="-fx-text-fill:white;"/>

                    <Label text="Active Vouchers:" GridPane.rowIndex="6" style="-fx-text-fill:white;"/>
                    <Label fx:id="detVouchers" GridPane.rowIndex="6" style="-fx-text-fill:white;"/>

                </GridPane>

                <!-- Bottom action bar -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="View Requests"/>
                    <Button text="View Vouchers"/>
                    <Button text="Update Info"/>
                    <Button text="Delete"/>
                </HBox>
            </VBox>

        </VBox>

    </center>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="pkg.vms.controller.UsersController">
    <!-- HEADER -->
    <top>
        <HBox spacing="15" style="-fx-background-color:#1e1e1e;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Users Management"
                   style="-fx-text-fill:white; -fx-font-size:20px; -fx-font-weight:bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchHeaderField"
                       promptText="Search user..."
                       prefWidth="250"/>
            <Button text="Search" onAction="#handleSearch"/>
        </HBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- TOP ACTION BAR -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="+ Add New User" onAction="#handleAddUser"/>
            </HBox>
            <Separator/>

            <!-- USERS TABLE -->
            <TableView fx:id="usersTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="120"/>
                    <TableColumn fx:id="firstNameColumn" text="First Name" prefWidth="120"/>
                    <TableColumn fx:id="lastNameColumn" text="Last Name" prefWidth="120"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="180"/>
                    <TableColumn fx:id="roleColumn" text="Role" prefWidth="100"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="titreColumn" text="Titre" prefWidth="150"/>
                </columns>
            </TableView>

            <!-- TABLE ACTION BUTTONS -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="5" right="0" bottom="5" left="0"/>
                </padding>
                <Button text="Edit" onAction="#handleEditUser"/>
                <Button text="Delete" onAction="#handleDeleteUser"/>
            </HBox>
            <Separator/>

            <!-- ADD / EDIT USER FORM -->
            <VBox fx:id="addForm" spacing="12" visible="false" managed="false"
                  style="-fx-background-color:#2d2d2d; -fx-padding:20; -fx-background-radius:10;">
                <Label fx:id="formTitle"
                       text="Add/Edit User"
                       style="-fx-text-fill:white; -fx-font-size:18px; -fx-font-weight:bold;"/>
                <TextField fx:id="addUsername" promptText="Username"/>
                <TextField fx:id="addFirstName" promptText="First Name"/>
                <TextField fx:id="addLastName" promptText="Last Name"/>
                <TextField fx:id="addEmail" promptText="Email"/>
                <TextField fx:id="addRole" promptText="Role"/>
                <TextField fx:id="addStatus" promptText="Status"/>
                <TextField fx:id="addPassword" promptText="Password"/>
                <TextField fx:id="addDdl" promptText="DDL"/>
                <TextField fx:id="addTitre" promptText="Titre"/>
                <Label fx:id="formError" style="-fx-text-fill:red;"/>
                <HBox spacing="10">
                    <Button text="Save" onAction="#handleFormSave"/>
                    <Button text="Cancel" onAction="#handleAddCancel"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>